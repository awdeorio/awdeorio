#!/bin/bash

# Stop on errors
set -Eeuo pipefail

# Start server
# bundle exec jekyll serve --bind localhost 8000 & PID=$!
python3 -m http.server --bind localhost 8000 & PID=$!

# Register handler to kill server on exit
function cleanup() {
  kill ${PID} || echo "Error killing process ${PID}"
}
trap cleanup SIGINT SIGQUIT SIGABRT SIGKILL SIGTERM ERR

# FIXME error check for open port or crashed server in a loop

# Make sure server is running
sleep 1
if ! kill -0 ${PID} &> /dev/null; then
  echo "Error: server failed to start"
  exit 1
fi

# Open browser tab
open http://localhost:8000

# Wait for all processes to exit
wait
